;
; Click Board Manifest Source for
; Thunder Click
; https://www.mikroe.com/thunder-click
; CONFIG_AS3935

# -----------------------------------------------------------
#            Manifest Header
# -----------------------------------------------------------
[manifest-header]
version-major = 0
version-minor = 1
click-string-id = 1
num-devices = 1
int-gpio-state = 1

# -----------------------------------------------------------
#            Manifest String Descriptors
# -----------------------------------------------------------
; click string (id can't be 0)
[string-descriptor 1]
string = thunder

; driver string
[string-descriptor 2]
string = as3935

# -----------------------------------------------------------
#            Manifest Device Descriptors
# -----------------------------------------------------------
; device descriptor
[device-descriptor 1]
driver-string-id = 2
protocol = 1
mode=1
max-speed-hz=400000
irq = 1
irq-type = 1
