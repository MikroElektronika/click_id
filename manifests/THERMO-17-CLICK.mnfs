;
; Click Board Manifest Source for
; Thermo 17 Click
; https://www.mikroe.com/thermo-17-click
; CONFIG_SENSORS_LM90

# -----------------------------------------------------------
#            Manifest Header
# -----------------------------------------------------------
[manifest-header]
version-major = 0
version-minor = 1
click-string-id = 1
int-gpio-state = 1

# -----------------------------------------------------------
#            Manifest String Descriptors
# -----------------------------------------------------------
; click string (id can't be 0)
[string-descriptor 1]
string = thermo7

; driver string
[string-descriptor 2]
string = tmp451

# -----------------------------------------------------------
#            Manifest Device Descriptors
# -----------------------------------------------------------
; device descriptor
[device-descriptor 1]
driver-string-id = 2
protocol = 2
reg = 0x4c
irq = 1
irq-type = 8
